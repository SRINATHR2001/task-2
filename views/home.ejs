
<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Data Table</title>
    <!-- Add Bootstrap CSS link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            color: #212529;
            padding: 20px;
            margin: 0;
        }

        header {
            background-color: #ffffff;
            color: #000000;
            padding: 10px;
            text-align: center;
        }

        .container {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            margin-top: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .all-products-btn {
            text-align: right;
            margin-bottom: 20px;
        }

        .all-products-btn button {
            background-color: #12c51b;
            color: #fff;
            border: none;
        }

        h2 {
            text-align: center;
            font-weight: bold;
            color: #000000;
            text-transform: uppercase;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        th,
        td {
            border: 1px solid #dee2e6;
            padding: 12px;
            text-align: center;
        }

        /* Additional styling to match the original design */
        .table-dark th {
            background-color: #000000;
            color: #f1f1f1;
        }

        a {
            color: #000000;
            text-decoration: none;
        }

        a:hover {
            color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container" style="text-align: left;">
        
        <div class="all-products-btn" style="text-align: left;">
            <button class="btn btn-success"><a href='/all-products' style="text-decoration: none; color: #ffffff;">View All Products</a></button>
        </div>
        <form action="/search" method="GET" class="mb-3">
            <div class="input-group">
                <input type="text" class="form-control mr-10" placeholder="Search products..." name="q">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </form>
    </div>
    <div class="container">
        <h2>Category List</h2>
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Category Name</th>
                    <th>Product Count</th>
                    <th>Created Date</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(item => { %>
                    <tr>
                        <td><%= item._source.id %></td>
                        <td><a href="/categories/type?categoryID=<%= item._source.id %>" style="text-decoration: none;"><%= item._source.category_name %></a></td>
                        <td><%= item._source.product_count %></td>
                        <td><%= item._source.created_date %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Add Bootstrap JS and Popper.js (required for some Bootstrap components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
